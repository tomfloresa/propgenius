<p id="notice"><%= notice %></p>

<h1>Listing Water Readings</h1>

<table>
  <thead>
    <tr>
      <th>Subunit</th>
      <th>Property</th>
      <th>Period</th>
      <th>Total reading</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @water_readings.each do |water_reading| %>
      <tr>
        <td><%= water_reading.subunit_id %></td>
        <td><%= water_reading.property_id %></td>
        <td><%= water_reading.period %></td>
        <td><%= water_reading.total_reading %></td>
        <td><%= link_to 'Show', water_reading %></td>
        <td><%= link_to 'Edit', edit_water_reading_path(water_reading) %></td>
        <td><%= link_to 'Destroy', water_reading, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

