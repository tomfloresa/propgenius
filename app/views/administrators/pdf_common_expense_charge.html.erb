<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="invoice-title">
                <h2>Boleta Gastos Comúnes</h2>
                <h3 class="pull-right">Identificador #
                    <%= @common_expense_subunit.id %></h3>
                <h3>Periodo:
                    <%= @common_expense_subunit.period.strftime("%m-%Y") %></h3>
                <h4><%= @subunit.address_and_number %></h4>
            </div>
            <hr>
            <div class="row">
                <div class="col-xs-6">
                    <address>
                        <strong>Emitida a:</strong><br>
                        <%= @renter.renter_name_lastname %><br>
                        <%= @subunit.address_and_number %><br>
                        <%= @subunit.property.comune.name %>
                    </address>
                </div>
                <div class="col-xs-6 text-right">
                    <address>
                        <strong>Datos para pago:</strong><br>
                        <%= @property.bank.name %><br>
                        Cuenta Corriente<br>
                        Nº <%= @property.bank_account_number %><br>
                    </address>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <strong>Detalle de Gasto Común
                            <%= @subunit.address_and_number %></strong>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <td>
                                        <strong>CATEGORIA</strong>
                                    </td>
                                    <td class="text-center">
                                        <strong>COMUNIDAD</strong>
                                    </td>
                                    <td class="text-right">
                                        <strong>UNIDAD</strong>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                <tr>
                                    <td>AGUA</td>
                                    <td class="text-center"><%= number_to_currency(@common_expense_property.water, :delimiter => '.', :precision => 0) %></td>
                                    <td class="text-right"><%= number_to_currency(@common_expense_subunit.water_charge, :delimiter => '.', :precision => 0) %></td>
                                </tr>
                                <tr>
                                    <td>LUZ</td>
                                    <td class="text-center"><%= number_to_currency(@common_expense_property.electricity, :delimiter => '.', :precision => 0) %></td>
                                    <td class="text-right"><%= number_to_currency(@common_expense_subunit.electricity_charge, :delimiter => '.', :precision => 0) %></td>
                                </tr>
                                <tr>
                                    <td>GAS</td>
                                    <td class="text-center"><%= number_to_currency(@common_expense_property.gas, :delimiter => '.', :precision => 0) %></td>
                                    <td class="text-right"><%= number_to_currency(@common_expense_subunit.gas_charge, :delimiter => '.', :precision => 0) %></td>
                                </tr>
                                <tr>
                                    <td>MANTENIMIENTO</td>
                                    <td class="text-center"><%= number_to_currency(@common_expense_property.maintenance_payments, :delimiter => '.', :precision => 0) %></td>
                                    <td class="text-right"><%= number_to_currency(@common_expense_subunit.maintenance_payments, :delimiter => '.', :precision => 0) %></td>
                                </tr>
                                <tr>
                                    <td>SUELDOS</td>
                                    <td class="text-center"><%= number_to_currency(@common_expense_property.salary_payments, :delimiter => '.', :precision => 0) %></td>
                                    <td class="text-right"><%= number_to_currency(@common_expense_subunit.salary_payments, :delimiter => '.', :precision => 0) %></td>
                                </tr>
                                <tr>
                                    <td>OTROS</td>
                                    <td class="text-center"><%= number_to_currency(@common_expense_property.others, :delimiter => '.', :precision => 0) %></td>
                                    <td class="text-right"><%= number_to_currency(@common_expense_subunit.others_charge, :delimiter => '.', :precision => 0) %></td>
                                </tr>
                                <tr>
                                    <td class="no-line"></td>
                                    <td class="no-line text-center">
                                        <strong>TOTAL A PAGAR</strong>
                                    </td>
                                    <td class="no-line text-right"><%= number_to_currency(@common_expense_subunit.total, :delimiter => '.', :precision => 0) %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
