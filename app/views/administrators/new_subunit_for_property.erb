<%= render('transversals/navbar_admin') %>
<h3 class="text-center">Agregando subunidad a propiedad
    <%= @property.address %></h3>
<div class="container">
    <div class="col-lg-8 col-lg-offset-2">
      <%= form_for(@subunit) do |f| %>
        <% if @subunit.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@subunit.errors.count, "error") %>
                prohibited this subunit from being saved:</h2>

            <ul>
                <% @subunit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :property_id, "Propiedad madre" %><br>
            <%= f.text_field :property_id, :value => @property.id, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :square_meters, "Metros cuadrados" %><br>
            <%= f.text_field :square_meters, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :property_type_id, "Tipo de propiedad" %><br>
            <%= f.number_field :property_type_id, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :renter_id , "Arrendador"%><br>
            <%= f.number_field :renter_id, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :proration_percentage %><br>
            <%= f.number_field :proration_percentage, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :rent_value, "Valor arriendo" %><br>
            <%= f.text_field :rent_value, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :number, "Número de subunidad" %><br>
            <%= f.number_field :number, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :lease_startdate, "Inicio de arriendo" %><br>
            <%= f.date_select :lease_startdate, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :owner_id, "Dueño subunidad" %><br>
            <%= f.number_field :owner_id, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.submit "Crear Subunidad", class: "btn btn-default btn-block" %>
        </div>
        <% end %>
    </div>
</div>
