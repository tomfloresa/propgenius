<%= render('transversals/navbar_admin') %>
<h3 class="text-center">Agregando subunidad a propiedad <%= @property.address %></h3>
<div class="container">
  <%= form_for(@subunit) do |f| %>
    <% if @subunit.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@subunit.errors.count, "error") %> prohibited this subunit from being saved:</h2>

        <ul>
        <% @subunit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :property_id, "Propiedad madre" %><br>
      <%= f.text_field :property_id, :value => @property.id %>
    </div>
    <div class="field">
      <%= f.label :square_meters, "Metros cuadrados" %><br>
      <%= f.text_field :square_meters %>
    </div>
    <div class="field">
      <%= f.label :property_type_id, "Tipo de propiedad" %><br>
      <%= f.number_field :property_type_id %>
    </div>
    <div class="field">
      <%= f.label :renter_id , "Arrendador"%><br>
      <%= f.number_field :renter_id %>
    </div>
    <div class="field">
      <%= f.label :proration_percentage %><br>
      <%= f.number_field :proration_percentage %>
    </div>
    <div class="field">
      <%= f.label :rent_value, "Valor arriendo" %><br>
      <%= f.text_field :rent_value %>
    </div>
    <div class="field">
      <%= f.label :number, "Número de subunidad" %><br>
      <%= f.number_field :number %>
    </div>
    <div class="field">
      <%= f.label :lease_startdate, "Inicio de arriendo" %><br>
      <%= f.date_select :lease_startdate %>
    </div>
    <div class="field">
      <%= f.label :owner_id, "Dueño subunidad" %><br>
      <%= f.number_field :owner_id %>
    </div>
    <div class="actions">
      <%= f.submit "Crear Subunidad", class: "btn btn-default" %>
    </div>
  <% end %>
</div>
