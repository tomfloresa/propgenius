<%= render('transversals/navbar_admin') %>
<h3 class="text-center">Agregando subunidad a propiedad
    <%= @property.address %></h3>
<div class="container">
    <div class="col-lg-8 col-lg-offset-2">
      <%= form_for(@subunit) do |f| %>
        <% if @subunit.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@subunit.errors.count, "error") %>
                prohibited this subunit from being saved:</h2>

            <ul>
                <% @subunit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <%= f.hidden_field :property_id, :value => @property.id %>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :square_meters, "METROS CUADRADOS", class: "input-header" %><br>
            <%= f.text_field :square_meters, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :property_type_id, "TIPO", class: "input-header" %><br>
            <%= f.collection_select :property_type_id, PropertyType.order(:description), :id, :description, {}, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :renter_id , "ARRENDADOR", class: "input-header" %><br>
            <%= f.number_field :renter_id, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :proration_percentage, "% PRORRATEO", class: "input-header" %><br>
            <%= f.number_field :proration_percentage, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :rent_value, "VALOR ARRIENDO", class: "input-header" %><br>
            <%= f.text_field :rent_value, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :number, "Nº", class: "input-header" %><br>
            <%= f.number_field :number, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :lease_startdate, "INICIO ARRIENDO", class: "input-header" %><br>
            <%= f.date_select :lease_startdate, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :owner_id, "DUEÑO", class: "input-header" %><br>
            <%= f.number_field :owner_id, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.submit "CREAR SUBUNIDAD", class: "btn btn-default btn-block action-button aquamarine-button" %>
        </div>
        <% end %>
    </div>
</div>
