<%= render('transversals/navbar_admin') %>
<div class="sub-nav"></div>
<h1 class="text-center">Nuevo Gasto Común</h1>
<h3 class="text-center"><%= @subunit.address_and_number %></h3>
<div class="container">
    <div class="col-lg-8 col-lg-offset-2">
        <%= form_for(@common_expense_subunit) do |f| %>
        <% if @common_expense_subunit.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@common_expense_subunit.errors.count, "error") %>
                prohibited this common_expense_subunit from being saved:</h2>

            <ul>
                <% @common_expense_subunit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <%= f.hidden_field :subunit_id, :value => @subunit.id %>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :electricity_charge, "ELECTRICIDAD", class: "input-header" %><br>
            <%= f.text_field :electricity_charge, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :water_charge, "AGUA", class: "input-header" %><br>
            <%= f.text_field :water_charge, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :gas_charge, "GAS", class: "input-header" %><br>
            <%= f.text_field :gas_charge, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.label :others_charge, "OTROS", class: "input-header" %><br>
            <%= f.text_field :others_charge, class: "form-control" %>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 div-for-input">
            <%= f.submit "CREAR GASTO COMÚN", class: "btn btn-default btn-block action-button aquamarine-button" %>
        </div>
        <% end %>
    </div>
</div>
