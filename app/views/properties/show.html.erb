    <div class="col-lg-4 col-md-6 col-sm-6 info-square">
        <div class="holder-extern">
            <div class="holder-intern">
                <h2 class="text-center"><%= "#{@property.address}, Nº #{@property.number}" %></h2>
                <h3 class="text-center"><%= "#{@property.subunits.count} subunidades" %></h3>
                <h5 class="text-center"><%= link_to "editar propiedad", edit_property_path(@property), class: "" %></h5>
            </div>
        </div>
    </div>
