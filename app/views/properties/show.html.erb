<div class="container-fluid container-squares">
    <div class="col-lg-3 col-md-3 info-square">
        <div class="holder-extern info-square">
            <div class="holder-intern">
                <h2 class="text-center"><%= "#{@property.address}, Nº #{@property.number}" %></h2>
                <h3 class="text-center"><%= "#{@property.subunits.count} subunidades" %></h3>
                <h5 class="text-center"><%= link_to "editar propiedad", edit_property_path(@property), class: "" %></h5>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-9 col-sm-6 col-xs-12 info-square">
        <div class="holder-extern-no-verticality">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 square-divided-four">
                <div>
                  <div class="text-center">
                    <%= inline_svg("house") %>
                  </div>
                    <%= link_to "Crear subunidad", new_subunit_for_property_path(:property_id => @property.id), class: "btn btn-default action-button" %>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 square-divided-four">
