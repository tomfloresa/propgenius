<h1 class="text-center">Nueva Propiedad</h1>
<div class="container">
  <%= form_for(@property) do |f| %>
    <% if @property.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@property.errors.count, "error") %>
            prohibited this property from being saved:</h2>

        <ul>
            <% @property.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :address, "DIRECCIÓN", class: "input-header" %><br>
        <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :comune_id, "COMUNA", class: "input-header" %><br>
        <%= f.collection_select :comune_id, Comune.order(:name), :id, :name, {}, class: "form-control" %>
    </div>
    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :property_type_id, "TIPO", class: "input-header" %><br>
        <%= f.collection_select :property_type_id, PropertyType.order(:description), :id, :description, {}, class: "form-control" %>
    </div>
    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :owner_id, "PROPIETARIO", class: "input-header" %><br>
        <%= f.collection_select :owner_id, Owner.order(:first_name), :id, :owner_name_lastname, {}, class: "form-control" %>
    </div>
    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :bank_id, "BANCO", class: "input-header" %><br>
        <%= f.collection_select :bank_id, Bank.order(:name), :id, :name, {}, class: "form-control" %>
    </div>
    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :bank_account_type_id, "TIPO DE CUENTA", class: "input-header" %><br>
        <%= f.collection_select :bank_account_type_id, BankAccountType.order(:name), :id, :name, {}, class: "form-control" %>
    </div>
    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :bank_account_number, "Nº CUENTA", class: "input-header" %><br>
        <%= f.text_field :bank_account_number, class: "form-control" %>
    </div>
    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.submit "CREAR", class: "btn btn-default btn-block action-button aquamarine-button" %>
    </div>
    <% end %>
  </div>
