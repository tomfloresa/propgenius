<%= render('transversals/navbar_admin') %>
<div class="sub-nav"></div>
<div class="container-fluid container-squares">
  <% @subunits.each do |s| %>
  <div class="col-lg-4 col-md-6 col-sm-6 info-square">
      <div class="holder-extern">
          <div class="holder-intern">
              <h2 class="text-center"><%= "#{s.address_and_number}" %></h2>
              <h3 class="text-center header-nav"><%= "#{s.square_meters} m2" %></h3>
              <h3 class="header-nav"><%= "Vence: #{s.readjustment_date.strftime("%d/%m/%Y")}" %></h3>
              <h3 class="header-nav"><%= "Reajusta: #{s.readjustment_date.strftime("%d/%m/%Y")}" %></h3>
              <%= link_to "VER", subunit_path(s), class: "btn btn-default btn-block action-button aquamarine-button" %>
          </div>
      </div>
  </div>
  <% end %>
</div>
