<%= render("transversals/navbar_admin") %>
<div class="container">
    <h2 class="text-center">Crear Arrendatario</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :first_name, "primer nombre", class: "input-header" %><br/>
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :second_name, "segundo nombre", class: "input-header" %><br/>
        <%= f.text_field :second_name, class: "form-control" %>
    </div>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :first_last_name, "primer apellido", class: "input-header" %><br/>
        <%= f.text_field :first_last_name, class: "form-control" %>
    </div>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :second_last_name, "segundo apellido", class: "input-header" %><br/>
        <%= f.text_field :second_last_name, class: "form-control" %>
    </div>


    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :email, "email", class: "input-header" %><br/>
        <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :mobile, "teléfono móvil", class: "input-header" %><br/>
        <%= f.text_field :mobile, class: "form-control" %>
    </div>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :landline, "teléfono fijo", class: "input-header" %><br/>
        <%= f.text_field :landline, class: "form-control" %>
    </div>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :password, "contraseña", class: "input-header" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.label :password_confirmation, "re-ingrese contraseña", class: "input-header" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-div col-md-6 col-md-offset-3">
        <%= f.submit "CREAR", class: "btn btn-default btn-block action-button aquamarine-button" %>
    </div>
    <% end %>
</div>
