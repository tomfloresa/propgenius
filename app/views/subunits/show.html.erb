<%= render('transversals/navbar_admin') %>
<div class="container">
    <h1 class="text-center"><%= "#{@subunit.property.address}, NÂº #{@subunit.number}" %></h1>
</div>
<div class="container-fluid">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 square-div">
            <div class="holder-centered">
              <h2 class="text-center">Tipo:</h2>
              <h3 class="text-center"><%= @subunit.property_type.description %></h3>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 square-div">
            <div class="holder-centered">
              <h2 class="text-center">Propietario</h2>
              <h3 class="text-center"><%= @subunit.owner.first_name %></h3>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 square-div">
            <div class="holder-centered">
              <h2 class="text-center">Arrendatario:</h2>
              <h3 class="text-center"><%= @subunit.renter.first_name %></h3>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 square-div">
            <div class="holder-centered">
              <h2 class="text-center">Arriendo</h2>
              <h3 class="text-center"><%= number_to_currency(@subunit.rent_value, {precision: 0, delimiter: "."}) %></h3>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 square-div">
            <div>
              <h2 class="text-center">Contrato:</h2>
              <h3 class="text-center"><%= @subunit.lease_startdate.strftime("%d/%m/%Y") %></h3>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 square-div">
            <div>
              <h2 class="text-center">% prorrateo:</h2>
              <h3 class="text-center"><%= number_to_percentage(@subunit.proration_percentage, {precision: 3}) %></h3>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
          <%= link_to "editar subunidad", edit_subunit_path(@subunit), class: "btn btn-default btn-block action-button" %>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

    </div>
</div>
<div class="container-fluid"></div>
